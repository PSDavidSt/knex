{
  "description": "schema for manifest of knex project",
  "type": "object",
  "required": [
    "project"
  ],
  "properties": {
    "project": {
      "type": "object",
      "required": ["title", "authors", "description", "status", "date_creation"],
      "properties": {

        "title": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format":"url"
        },
        "authors":{
          "type": "array",
          "minItems": 1,
          "items":{
            "$ref": "#/definitions/user"
          },
          "additionalProperties": false
        },
        "analysis":{
          "type": "object",
          "$ref": "#/definitions/analysis"
        },
        "hypothesis":{
          "type": "string"
        },
        "teams": {
          "type": "array",
          "minItems": 1,
          "$ref": "#/definitions/team"
        },
        "status": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "date_creation": {
          "type": "string",
          "format": "date"
        },
        "date_pub": {
          "type": "string",
          "format": "date"
        },
        "date_updated": {
          "type": "string",
          "format": "date"
        },
        "tags": {
          "type": "array",
          "items":{
            "tag": {"type": "string"}
          }
        },
        "future_work": {
          "type": "array",
          "items":{
            "$ref": "#/definitions/future_work"
          }
        },
        "realated_projects": {
          "type": "array",
          "items":{
            "project": {"$ref": "#/definitions/future_work"}
          }
        }
      }
    }

  },
  "additionalProperties": false,

  "definitions": {
    "user": {
      "required": [
        "name",
        "email"
      ],
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "analysis": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "url"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "team": {
      "type": "string"
    },
    "authors": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/user"
      }
    },
    "future_work": {
      "type": "string"
    }
  }
}



